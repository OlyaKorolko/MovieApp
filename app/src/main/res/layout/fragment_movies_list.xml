<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:id="@+id/fragment_movies_list"
    tools:context=".FragmentMoviesList">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="55dp"
                android:src="@android:drawable/ic_menu_mylocation"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/pink" />

            <ImageView
                android:id="@+id/circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23.5dp"
                android:layout_marginTop="62.5dp"
                android:src="@drawable/circle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ring"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="21.14dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/ring"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/movies_list_word"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="55dp"
                android:text="@string/movies_list"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/transparent_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="102dp"
                android:src="@drawable/bg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                android:id="@+id/heroes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="102dp"
                android:src="@drawable/movie"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/gradient"
                android:layout_width="166dp"
                android:layout_height="248dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="102dp"
                android:src="@drawable/right_gradient"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/rounded_square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/rounded_square"
                app:layout_constraintLeft_toLeftOf="@id/heroes"
                app:layout_constraintTop_toTopOf="@id/heroes"
                app:tint="#D9020101" />

            <ImageView
                android:id="@+id/age"
                android:layout_width="16dp"
                android:layout_height="12dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/age_13"
                app:layout_constraintLeft_toLeftOf="@id/rounded_square"
                app:layout_constraintTop_toTopOf="@id/rounded_square" />

            <TextView
                android:id="@+id/genres_2"
                android:layout_width="146dp"
                android:layout_height="12dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="214dp"
                android:text="@string/action_adventure_drama"
                android:textColor="@color/pink"
                android:textSize="8sp"
                app:layout_constraintLeft_toLeftOf="@id/heroes"
                app:layout_constraintTop_toTopOf="@id/heroes" />

            <ImageView
                android:id="@+id/star"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/heroes"
                app:layout_constraintStart_toStartOf="@id/heroes"
                app:srcCompat="@android:drawable/btn_star"
                app:tint="@color/pink" />

            <ImageView
                android:id="@+id/star2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/heroes"
                app:layout_constraintStart_toEndOf="@id/star"
                app:srcCompat="@android:drawable/btn_star"
                app:tint="@color/pink" />

            <ImageView
                android:id="@+id/star3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/heroes"
                app:layout_constraintStart_toEndOf="@id/star2"
                app:srcCompat="@android:drawable/btn_star"
                app:tint="@color/pink" />

            <ImageView
                android:id="@+id/star4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/heroes"
                app:layout_constraintStart_toEndOf="@id/star3"
                app:srcCompat="@android:drawable/btn_star"
                app:tint="@color/pink" />

            <ImageView
                android:id="@+id/star5"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/heroes"
                app:layout_constraintStart_toEndOf="@id/star4"
                app:srcCompat="@android:drawable/btn_star"
                app:tint="@color/grey" />

            <TextView
                android:id="@+id/reviews_word_125"
                android:layout_width="53dp"
                android:layout_height="12dp"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="8dp"
                android:text="@string/num_of_reviews"
                android:textColor="@color/grey"
                android:textSize="8sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/heroes"
                app:layout_constraintStart_toEndOf="@id/star5" />

            <TextView
                android:id="@+id/movie_name"
                android:layout_width="132dp"
                android:layout_height="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="8dp"
                android:text="@string/avengers_end_game"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="@id/transparent_screen"
                app:layout_constraintBottom_toBottomOf="@id/transparent_screen"/>

            <TextView
                android:id="@+id/mins"
                android:layout_width="154dp"
                android:layout_height="12dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:text="@string/_137_min"
                android:textColor="@color/grey"
                android:textSize="8dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/transparent_screen"
                app:layout_constraintLeft_toLeftOf="@id/transparent_screen"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>